<UserControl x:Class="PokemonUtility.Views.CaptureWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity" 
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"             
             prism:ViewModelLocator.AutoWireViewModel="True"
             Width="{Binding CaptureWidth}">
    <Grid>
        <StackPanel HorizontalAlignment="Left" Height="500" VerticalAlignment="Top" Width="408" Margin="0,10,0,-10">
            <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="311" Margin="10,0,0,0" Width="379" >
                <Border.InputBindings>
                    <MouseBinding MouseAction="LeftDoubleClick" Command="{Binding CloseCommand}" />
                </Border.InputBindings>
                <Button x:Name="button" Content="Button" HorizontalAlignment="Left" Width="37" Margin="9,9,0,277" Command="{Binding CloseCommand}"  />
            </Border>
        </StackPanel>

    </Grid>
</UserControl>
